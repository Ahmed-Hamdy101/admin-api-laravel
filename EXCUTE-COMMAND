- php artisan passport:install
-> model -> HasApiToken
-> Auth -> driver => 'passport'

// be sure u use passport not sanctum
if(Auth::attemp($request->only('username' ,'password'){
$user=Auth::user();
$token =  $user->creatToken('admin')->accessToken;
return response()->json( [
 'message'=>'login succfully',
 'token'=> $token
 ]
}
// RESPONSE  from HTTP_Foundation
return response()->json( [
  message = > error login ], RESPONSE::HTTP_REPONSE_Accepted);
